{% extends "subpage.html.twig" %}
{% set class = "subpage blogPage articlePage" %}
{% set title = article.title ~ " | Blog" %}
{% set meta_description = article.summary %}

{% set bannerimg="/images/laptop-coder-small.jpg" %}
{% set banneralt="Michael Born's musings on Web Development" %}

{% block tagline %}
# {{article.title}}
{{article.summary}}
{% endblock %}


{% block content %}
    <div class="blog details">
        <article id="{{article.title}}" class="details" itemscope itemtype="http://schema.org/LiveBlogPosting">
            {% if article.image %}<div class="image"><img itemprop="thumbnail" src="{{article.image}}" alt="{{article.title}}" /></div>{% endif %}
            <h1 itemprop="headline">{{article.title}}</h1>
            <div itemprop="articleBody">{{article.content|markdown}}</div>
            <footer>
              <meta itemprop="author" content="{{article.author}}" />
              <time itemprop="datePublished">{{article.date|date("m/d/Y")}}</time></p>
            </footer>
        </article>
    </div><!--/.blog-->
{% endblock %}
